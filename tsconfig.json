{
    "compilerOptions": {
        "module": "ES6",
        "target": "ES5",
        "experimentalDecorators": true,
        "jsx": "react",
        "outDir": "./dist",
        "baseUrl": "./src",
        "traceResolution": false,
        "sourceMap": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "strict": true, 
        "paths": {
            "@/*": ["./src/*"],
        } 
    },
    "include": [
        "./src/**/*"
    ],
    
}